<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions-lyrics">
  <schema id="org.gnome.shell.extensions.lyrics" path="/org/gnome/shell/extensions/lyrics/">
    
    <key name="mpris-player" type="s">
      <default>''</default>
      <summary>MPRIS Player to use (e.g., spotify)</summary>
      <description>The DBus service name of the preferred player. Leave empty to autodetect.</description>
    </key>
    
    <key name="lyric-source" type="s">
      <default>'lrclib'</default>
      <summary>Source to fetch lyrics from</summary>
      <description>Options: lrclib, genius, musixmatch, local</description>
    </key>

    <key name="font" type="s">
      <default>'Sans Bold 12'</default>
      <summary>Font for the status bar label</summary>
    </key>

    <key name="max-line-length" type="i">
      <default>50</default>
      <range min="10" max="200"/>
      <summary>Maximum length of lyrics line</summary>
    </key>

    <key name="color-animation" type="b">
      <default>true</default>
      <summary>Enable hue rotation animation</summary>
    </key>

    <key name="animation-speed" type="d">
      <default>1.0</default>
      <range min="0.1" max="5.0"/>
      <summary>Speed of the color animation</summary>
    </key>

  </schema>
</schemalist>
